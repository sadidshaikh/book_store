<%- include("partials/header") %>

<div class="container">
  <div class="row my-4">
    <div class="col-lg-12 mx-auto">
      <% if (message) { %>
      <div
        class="alert alert-dismissible fade show alert-<%= message.type %>"
        role="alert"
      >
        <button
          class="btn-close"
          type="button"
          data-bs-dismiss="alert"
          aria-label="close"
        ></button>
        <strong><%= message.message %></strong>
      </div>
      <% } %>
      <div class="table-responsive">
        <% if (books != '') { %>
        <table class="table table-striped text-center my-4">
          <thead>
            <tr class="table-dark">
              <th>ID</th>
              <th>Image</th>
              <th>Title</th>
              <th>Author</th>
              <th>Price</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% books.forEach((book, index) => { %>
            <tr class="align-middle">
              <td><%= index+1 %></td>
              <td>
                <img
                  src="<%= book.image %>"
                  alt="image"
                  width="50"
                  class="img-thumbnail"
                />
              </td>
              <td><%= book.title %></td>
              <td><%= book.author %></td>
              <td>$<%= book.price %></td>
              <td>
                <a href="/edit/<%= book._id %>" class="text-success"
                  ><i class="fas fa-edit fa-lg mx-1"></i
                ></a>
                <a href="/delete/<%= book._id %>" class="text-danger"
                  ><i class="fas fa-trash fa-lg mx-1"></i
                ></a>
              </td>
              <% }) %>
            </tr>
          </tbody>
        </table>
        <% } else { %>
        <h1 class="text-center text-secondary mt-5">
          No books found in the database
        </h1>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include("partials/footer") %>
